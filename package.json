{
  "name": "front-end-gestion-curricular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:proxy": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:usabilidad": "ng test --code-coverage --watch=false",
    "test:seguridad": "ng test --include='**/*security*.spec.ts' --include='**/jwt.interceptor.spec.ts' --include='**/input-validation.spec.ts' --include='**/session-management.spec.ts' --watch=false",
    "test:accesibilidad": "ng test --include='**/accessibility/**/*.spec.ts' --watch=false",
    "test:accesibilidad:e2e": "cypress run --spec 'cypress/e2e/accessibility/**/*.cy.ts'",
    "test:accesibilidad:e2e:open": "cypress open --e2e --browser chrome",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:usabilidad && npm run test:e2e",
    "test:seguridad-accesibilidad": "npm run test:seguridad && npm run test:accesibilidad && npm run test:accesibilidad:e2e",
    "test:reporte": "node scripts/generar-reporte-usabilidad.js",
    "serve:ssr:Front-end-gestion-curricular": "node dist/front-end-gestion-curricular/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/cdk": "^19.2.19",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.19",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.15",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.1",
    "docx": "^9.5.1",
    "express": "^4.18.2",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.0",
    "@types/chart.js": "^2.9.41",
    "@types/express": "^4.17.17",
    "@types/file-saver": "^2.0.7",
    "@types/html2canvas": "^0.5.35",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "axe-core": "^4.11.0",
    "cypress": "^15.5.0",
    "cypress-axe": "^1.7.0",
    "cypress-plugin-tab": "^1.0.5",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "^5.8.2"
  }
}
